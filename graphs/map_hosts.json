{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 370,
    "title": "Summer Olympics Host Cities",
    "projection": {
      "type": "equalEarth"
    },
    "layer": [
      {
        "data": {
          "url": "graphs/spacial_map_data.json",
          "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
          }
        },
        "mark": {
          "type": "geoshape",
          "fill": "lightgray",
          "stroke": "white"
        }
      },
      {
        "data": {
          "url": "datasets/olympics_hosts_edited.csv"
        },
        "encoding": {
          "longitude": {
            "field": "lon",
            "type": "quantitative"
          },
          "latitude": {
            "field": "lat",
            "type": "quantitative"
          },
          "tooltip": [
            {"field": "city_name", "type": "nominal", "title": "City"},
            {"field": "games_held", "type": "quantitative", "title": "Games held"},
            {"field": "game_year", "type": "nominal", "title": "Held in"}
          ]
        },
        "layer": [{
          "mark": {
            "type": "circle",
            "size": 40
          },
          "encoding": {
            "color": {
                "field": "games_held",
                "type": "nominal",
                "title": "Games Held",
                "scale": {
                    "domain": ["1", "2", "3"],
                    "range": ["red", "blue", "black"]
                  }
            }
          }
        }]
      }
    ]
  }
  